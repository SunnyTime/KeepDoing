<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >
    <!-- title -->
    <include
        android:id="@+id/title_normal"
        layout="@layout/layout_title_normal" />
    <ScrollView
        android:layout_below="@+id/title_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="@dimen/value_10dp"
            android:paddingRight="@dimen/value_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/value_18sp"
                />
            <TextView
                android:layout_marginTop="@dimen/value_10dp"
                android:id="@+id/join_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/value_12sp"
                />
            <TextView
                android:layout_marginTop="@dimen/value_10dp"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/value_15dp"
        >

        <ImageButton
            android:id="@+id/add_comment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_add_comment"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/all_comment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_comment"
            android:background="#00000000" />

        <ImageButton
            android:id="@+id/like_it"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_like"
            android:background="#00000000" />

        <ImageButton
            android:id="@+id/share_it"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_share"
            android:background="#00000000"
            />
    </LinearLayout>
</RelativeLayout>